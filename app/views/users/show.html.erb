<h1 class="text-center mt-4"> <%= @user.username %> </h1>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          
        </div>
        <div class="card-body">
          <div class="card-text text-left"><%= simple_format(@user.email) %></div>
          <a href="<%= edit_user_path(@user) %>" class="btn btn-outline-info">Edit</a>
          <%= link_to  "Delete", user_path(@user), method: :delete, 
              data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
        </div>
        <div class="card-footer text-muted">
          <small> created <%= time_ago_in_words(@user.created_at) %> ago, edited <%= time_ago_in_words(@user.updated_at) %> </small>
        </div>
      </div>
    </div>
  </div>
</div>
<p><%= link_to  "New", signup_path %> | <%= link_to  "Back to Home", root_path %></p>